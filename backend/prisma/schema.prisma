generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  password String
}

model Car {
  id          Int      @id @default(autoincrement())
  userId      Int
  model       String
  name        String
  capacity    Int
  addHor      Int
  fullDay     Int
  halfDay     Int
  luggage     Int
  description String
  image       String

  // Relation to Rent
  rents       Rent[]   // One car can have multiple rentals
}

model Rent {
  id          Int      @id @default(autoincrement())
  userId      Int
  carId       Int?      // Fixed relation
  fname       String
  email       String
  phoneNo     String
  vehicleYear Int?
  vehicleQty  Int?
  age         Int
  vehicleType String?
  serviceType String?
  city        String
  price       Int?     // Store price as an integer
  startDate   DateTime @default(now())
  endDate     DateTime?
  car         Car?      @relation(fields: [carId], references: [id])
}


model Book {
  id                 Int      @id @default(autoincrement())
  userId             Int      @unique
 // bookId       Int      @unique
  fname              String
  email              String
  phoneNo            String
  age                Int
  pickupLocation     String
  DropoffLocation    String
  amount             Int
  date               DateTime
  time               DateTime
}